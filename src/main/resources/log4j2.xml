<Configuration>

    <appender name="console" class="org.apache.logging.log4j.core.appender.ConsoleAppender">
        <param name="target" value="System.out"/>

        <layout class="org.apache.logging.log4j.core.pattern.PatternFormatter">
            <param name="conversionPattern" value="[%d{HH:mm:ss,SSS}] %p [%c: %L] %m%n"/>
        </layout>
    </appender>

    <root>
        <level value="trace"/>
        <appender-ref ref="console"/>
    </root>

</Configuration>